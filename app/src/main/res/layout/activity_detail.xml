<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_data_received_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/gojek" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_data_received_name"
            style="@style/TextContent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/startup_name"
            android:textColor="@color/primary_text"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tv_data_received_detail"
            style="@style/TextContent"
            android:layout_marginBottom="16dp"
            android:lineSpacingMultiplier="1.5"
            android:text="@string/startup_detail"
            android:textColor="@color/secondary_text" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow android:gravity="center">

                <Button
                    android:id="@+id/btn_share"
                    style="@style/ButtonGeneral"
                    android:text="@string/share" />
            </TableRow>

        </TableLayout>


    </LinearLayout>

</ScrollView>